<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Shopping Cart</h2>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End Page title area -->


<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="">
                <div class="product-content-right">
                    <div class="woocommerce">
                        <form method="post" action="#">
                            {{#if products}}
                            <table cellspacing="0" class="shop_table cart">
                                <thead>

                                    <tr>
                                        <th class="product-remove">&nbsp;</th>
                                        <th class="product-thumbnail">Hình Ảnh</th>
                                        <th class="product-name">Tên Sản Phẩm</th>
                                        <th class="product-price">Giá</th>
                                        <th class="product-quantity">Số Lượng</th>
                                        <th class="product-subtotal">Tổng Giá</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each products}}
                                    <tr class="cart_item">
                                        <td class="product-remove">
                                            <a title="Remove this item" class="remove"
                                                href="/cart/delete-cart/{{this.item._id}}">×</a>
                                        </td>

                                        <td class="product-thumbnail">
                                            <a href="single-product.html"><img width="145" height="145"
                                                    alt="poster_1_up" class="shop_thumbnail"
                                                    src="/{{this.item.image}}"></a>
                                        </td>

                                        <td class="product-name">
                                            <a href="single-product.html">{{this.item.name}}</a>
                                        </td>

                                        <td class="product-price">
                                            <span class="amount">{{this.item.price}}</span>
                                        </td>

                                        <td class="product-quantity">
                                            {{this.qty}}
                                        </td>

                                        <td class="product-subtotal">
                                            <span class="amount">{{this.price}}</span>

                                        </td>
                                        {{/each}}
                                    </tr>
                                </tbody>
                            </table>
                            <h4>Thành Tiền: {{totalPrice}}</h4>
                            {{!-- <a class="add_to_cart_button" href="/check-out">Thanh Toán</a> --}}
                            <!-- Button trigger modal -->
                            {{#if account}}
                            <a class="add_to_cart_button" href="/check-out">Thanh Toán</a>
                            {{else}}
                            <button type="button" class=" btn-primary  add_to_cart_button" data-toggle="modal"
                                data-target="#myModal">
                                Thanh Toán
                            </button>

                            {{/if}}
                            <!-- Modal -->
                            <div class="modal fade" id="myModal" tabindex="-1" role="dialog"
                                aria-labelledby="myModalLabel">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal"
                                                aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title" id="myModalLabel">Bạn chưa có tài khoản.
                                        </div>
                                        <div class="modal-body">
                                            <a href="/login">Đăng nhập</a> hoặc <a href="/register">Tạo tài khoản</a>
                                            </h4>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default"
                                                data-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary">Save changes</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{else}}
                            <h2>Không có sản phẩm nào được thêm vào giỏ hàng</h2>
                            {{/if}}
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>